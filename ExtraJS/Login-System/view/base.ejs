<%- include('header') -%>

<section class="forms-section">
  <h1 class="section-title">Login & Signup Forms</h1>
  <div class="forms">
    <div class="form-wrapper is-active">
      <button type="button" class="switcher switcher-login">
        Login
        <span class="underline"></span>
      </button>
      <form class="form form-login" action="/route/login" method="POST">
        <fieldset>
          <legend>Please, enter your email and password for login.</legend>
          <div class="input-block">
            <label for="login-email">E-mail</label>
            <input
              id="login-email"
              type="email"
              placeholder="email"
              name="email"
              required
            />
          </div>
          <div class="input-block">
            <label for="login-password">Password</label>
            <input
              id="login-password"
              type="password"
              placeholder="password"
              name="password"
              required
            />
          </div>
        </fieldset>
        
          <button type="submit" onclick="sleep()" class="btn-login">Login</button>
       
      </form>
    </div>
    <div class="form-wrapper">
      <button type="button" class="switcher switcher-signup">
        Sign Up
        <span class="underline"></span>
      </button>
      <form class="form form-signup" action="/route/signup" method="POST">
        <fieldset>
          <legend>
            Please, enter your email, password and password confirmation for
            sign up.
          </legend>
          <div class="input-block">
            <label for="signup-username">Username</label>
            <input
              id="signup-username"
              type="text"
              placeholder="username"
              name="username"
              required
            />
          </div>
          <div class="input-block">
            <label for="signup-email">E-mail</label>
            <input
              id="signup-email"
              type="email"
              placeholder="email"
              name="email0"
              required
            />
          </div>
          <div class="input-block">
            <label for="signup-password">Password</label>
            <input
              id="signup-password"
              type="password"
              placeholder="password"
              name="password0"
              required
            />
          </div>
        </fieldset>
       
          <button type="submit" onclick="sleep()" class="btn-signup">Sign Up</button>
        
      </form>
    </div>
  </div>
</section>

<%- include('footer') -%>
